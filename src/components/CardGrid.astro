---
const all = Astro.props.data;
const data = all[0];
---

<section class="flex flex-col items-center justify-center mb-20">
  <div class="flex flex-col items-center justify-center px-40 py-5">
    <h2 class="font-script text-4xl text-wrap pb-3">
      {data.title}
    </h2>
    <p class="font-thin text-md text-wrap text-center">
      {data.description}
    </p>
  </div>
  <div
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 px-8 py-6"
  >
    {
      data.items.map((item, index) => (
        <article class="flex flex-col gap-5 shadow-xl bg-white p-5">
          <img
            loading="lazy"
            src={item.image}
            alt="CafÃ©"
            class="overflow-hidden w-full"
          />
          <h3 class="font-custom font-script text-3xl text-wrap">
            {item.title}
          </h3>
          <p class="font-thin">{item.description}</p>
        </article>
      ))
    }
  </div>
</section>
